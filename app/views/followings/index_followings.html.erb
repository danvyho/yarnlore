<div class="row">
  <div class="following w-100">
    <% @followings.each do |following| %>
      <div class="follower-item d-flex justify-content-start align-items-center gap-3 p-3">
<% if following.avatar.attached? %>
  <%= cl_image_tag following.avatar.key, class: "avatar-large rounded-circle", alt: following.username %>
<% else %>
  <% basic_avatar = 'blank-profile.jpeg' %>
  <%= image_tag basic_avatar, class: "rounded-circle me-3", style: "width: 100px; height: 100px;" %>
<% end %>

        <%= link_to following.username, user_path(following), class: "no-style-link fw-bold" %>
      </div>
    <% end %>
  </div>
</div>
