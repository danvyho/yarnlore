<div class="row d-flex justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow-0 border" style="background-color: #f0f2f5;">
      <div class="card-body p-4">

        <div class="comments-list" style="max-height: 150px; overflow-y: auto;">
          <% comments.each do |comment| %>
            <%= render "posts/partials/toggle_comment", comment: comment %>
          <% end %>
        </div>

        <div class="mt-3">
          <%= form_with(model: [post, post.comments.new], local: false, html: { class: "form-outline", id: "new-comment-form" }) do |f| %>
            <div class="field">
              <%= f.label :content, "", class: "visually-hidden" %>
              <%= f.text_area :content, rows: 2, class: "form-control" %>
            </div>
            <div class="actions mt-2">
              <%= f.submit "Comment", class: "btn btn-primary btn-sm" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
